<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<DocumentationFile>bin\$(Configuration)\Scintilla.NET.EtoForms.WinForms.xml</DocumentationFile>
		<OutputType>Library</OutputType>
		<Title>Scintilla.NET.EtoForms.WinForms</Title>
		<Company>VPKSoft</Company>
		<Description>Eto.Forms wrapper for Scintilla control.</Description>
		<Copyright>Copyright Â© VPKSoft 2023</Copyright>
		<PackageProjectUrl>https://github.com/VPKSoft/Scintilla.NET.Eto</PackageProjectUrl>
		<RepositoryUrl>https://github.com/VPKSoft/Scintilla.NET.Eto</RepositoryUrl>
		<LangVersion>latest</LangVersion>
		<TargetFrameworks>net6.0-windows;net7.0-windows</TargetFrameworks>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<UseWindowsForms>true</UseWindowsForms>
		<Configurations>Debug;Release;DebugLinux;ReleaseLinux</Configurations>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<RootNamespace>ScintillaNet.EtoForms.WinForms</RootNamespace>
		<Version>1.0.8.5320</Version>
		<PackageReleaseNotes>See: https://github.com/VPKSoft/Scintilla.NET.Eto</PackageReleaseNotes>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageIcon>vpksoft_logo.png</PackageIcon>
		<PackageTags>scintilla;scintillanet;wrapper;winforms;eto.forms</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
	</PropertyGroup>
	<ItemGroup>
	  <None Include="..\..\README.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	  <None Include="..\..\vpksoft_logo.png">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Eto.Platform.Windows" Version="2.7.3" />
		<PackageReference Include="Scintilla.NET.Abstractions" Version="1.0.8" />
		<PackageReference Include="Scintilla.NET.WinForms" Version="1.0.8.5320" />
		<PackageReference Include="Scintilla.NET.EtoForms.Shared" Version="1.0.4.5320" />
	</ItemGroup>

	<!--<PropertyGroup>
		<RestoreSources>$(RestoreSources);../foo/bin/Debug;https://api.nuget.org/v3/index.json</RestoreSources>
	</PropertyGroup>-->
</Project>
